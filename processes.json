{
    "apps": [{
        "name": "pm2_server_app",
        "cwd": "./",
        "script": "app.js",
        "log_date_format": "YYYY-MM-DD HH:mm Z",
        "error_file": "./logs/app-err.log",
        "out_file": "./logs/app-out.lo",
        "pid_file": "pids/node-geo-api.pid",
        "merge_logs": true,
        "instances": 2,
        "min_uptime": "200s",
        "max_restarts": 10,
        "max_memory_restart": "300M",
        "cron_restart": "0 0 2 * *",
        "exec_mode": "cluster",
        "exec_interpreter": "node", //使用的解析器
        "watch": [
            "./modules",
            "./router"
        ],
        "ignore_watch": [
            "./node_modules",
            "./logs",
            "./pids"
        ],
        "watch_options": {
            "usePolling": true
        },
        "autorestart": false,
        "vizion": false,
        "env": {
            "NODE_ENV": "development"
        }
    }]
}