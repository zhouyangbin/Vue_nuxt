{
    "apps": [{
        "name": "pm2_app1",
        "cwd": "./",
        "script": "app.js",
        "log_date_format": "YYYY-MM-DD HH:mm Z",
        "error_file": "./logs/app-err.log",
        "out_file": "./logs/app-out.lo",
        "pid_file": "pids/node-geo-api.pid",
        "instances": 2,
        "min_uptime": "200s",
        "max_restarts": 10,
        "max_memory_restart": "300M",
        "cron_restart": "1 0 * * *",
        "watch": true,
        // "watch": [
        //     "./modules",
        //     // "./router",
        //     // "./sql_connect",
        //     "./views",
        //     "./static"
        // ],
        "ignore_watch": [
            "./node_modules",
            "./logs",
            "./pids"
        ],
        "watch_options": {
            "usePolling": true
        },
        "merge_logs": true,
        "exec_interpreter": "node",
        "exec_mode": "fork",
        "autorestart": false,
        "vizion": false,
        "env": {
            "NODE_ENV": "development"
        }
    }]
}